<div class="container inner">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col s8">
      <h1 class="title"><%= @report.title %></h1>
      <h2 class="sr-author">Den√∫ncia feita por <strong><%= @report.student %></strong></h2>
      <p class="sr-description"><%= @report.description %></p>
      <div class="sr-social-share">
        <a href="http://www.facebook.com/share.php?u=<%=u request.original_url %>" class="waves-effect waves-light btn btn-facebook">Compartilhar</a>
